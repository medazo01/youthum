// pages/blog.js

import Head from 'next/head';
import styles from '../styles/Blog.module.css'; // Import your CSS module

const Blog = () => {
  // Sample blog posts
  const posts = [
    { title: 'First Blog Post', date: 'August 28, 2024', excerpt: 'This is a brief summary of the first blog post.' },
    { title: 'Second Blog Post', date: 'August 29, 2024', excerpt: 'This is a brief summary of the second blog post.' },
    // Add more posts as needed
  ];

  return (
    <>
      <Head>
        <title>Blog - My Next.js Site</title>
        <meta name="description" content="Read our latest blog posts and updates." />
      </Head>
      <div className={styles.container}>
        <h1 className={styles.title}>Our Blog</h1>
        <ul className={styles.postList}>
          {posts.map((post, index) => (
            <li key={index} className={styles.postItem}>
              <h2 className={styles.postTitle}>{post.title}</h2>
              <p className={styles.postDate}>{post.date}</p>
              <p className={styles.postExcerpt}>{post.excerpt}</p>
              <a href={`/blog/${index}`} className={styles.readMore}>Read more</a>
            </li>
          ))}
        </ul>
      </div>
    </>
  );
};

export default Blog;
